{
    "layout": {
        "type": "layout",
        "pages": [
            "general"
        ],
        "general": {
            "type": "page",
            "title": "General",
            "sections": [
                "general-osd-configs",
                "general-icon-configs"
            ]
        },
        "general-osd-configs": {
            "type": "section",
            "title": "Osd Window",
            "keys": [
                "osd-width",
                "osd-height",
                "osd-border-radius",
                "osd-position-x",
                "osd-position-y"
            ]
        },
        "general-icon-configs": {
            "type": "section",
            "title": "Icon",
            "keys": [
                "icon-size"
            ]
        }
    },
    "osd-width": {
        "type": "entry",
        "default": "2",
        "description": "Width of OSD window."
    },
    "osd-height": {
        "type": "entry",
        "default": "0.3",
        "description": "Height of OSD window."
    },
    "osd-border-radius": {
        "type": "entry",
        "default": "999",
        "description": "Border radius od OSD window."
    },
    "osd-position-x": {
        "type": "spinbutton",
        "default": 50,
        "min": 0,
        "max": 100,
        "step": 1,
        "description": "X position of OSD window relative to screen size by percentage."
    },
    "osd-position-y": {
        "type": "spinbutton",
        "default": 90,
        "min": 0,
        "max": 100,
        "step": 1,
        "description": "Y position of OSD window relative to screen size by percentage"
    },
    "icon-size": {
        "type": "spinbutton",
        "default": 50,
        "min": 0,
        "max": 100,
        "step": 1,
        "description": "Icon size"
    }
}